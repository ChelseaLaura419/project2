<div class="home">
    <div class="text-center" data-gr-c-s-loaded="true">
        <img src="images/combatLarge.png">
    </div>

    <!-- SIGN UP -->
    <div class="text-center" data-gr-c-s-loaded="true">
        <form class="form-signin">
            <p class="h3 mb-3 font-weight-normal"><strong>Sign Up for Combat Squad</strong></p>
            <label for="inputFirstName" class="sr-only">First Name</label>
            <input type="firstName" id="inputFirstName" class="form-control" placeholder="First Name" required=""
                autofocus="">
